generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id            Int       @id @default(autoincrement())
  uuid          String    @unique @default(uuid())
  username      String    @unique
  email         String    @unique
  password      String
  role          AuthRole
  date_of_birth DateTime?
  created_at    DateTime  @default(now())
  updated_at    DateTime  @updatedAt

  stats UserStats?
  games Game[]

  @@index([email])
  @@index([uuid])
  @@map("users")
}

model UserStats {
  id         Int      @id @default(autoincrement())
  user_uuid  String   @unique
  rank       Int      @default(0)
  level      Int      @default(1)
  points     Int      @default(0)
  wins       Int      @default(0)
  losses     Int      @default(0)
  draws      Int      @default(0)
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
  user       User     @relation(fields: [user_uuid], references: [uuid], onDelete: Cascade)

  @@map("user_stats")
}

model Game {
  id          Int        @id @default(autoincrement())
  uuid        String     @unique @default(uuid())
  user_uuid   String
  code        String
  board_size  String
  mode        GameMode
  status      GameStatus
  time        Int?
  moves       Int        @default(0)
  points      Int        @default(0)
  created_at  DateTime   @default(now())
  finished_at DateTime?
  user        User       @relation(fields: [user_uuid], references: [uuid], onDelete: Cascade)

  @@index([uuid])
  @@index([user_uuid])
  @@map("games")
}

enum GameMode {
  SINGLE
  OFFLINE
  ONLINE
}

enum GameStatus {
  WIN
  LOSS
  DRAW
}

enum AuthRole {
  USER
  ADMIN
  SUPER_ADMIN
  SUPPORT
}
